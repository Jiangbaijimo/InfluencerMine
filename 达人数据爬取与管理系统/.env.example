# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=influencer_crawler

# API配置
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=2

# 爬取配置
CRAWL_DELAY_MIN=0.5
CRAWL_DELAY_MAX=1.5
MAX_WORKERS=5
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(threadName)s] - %(message)s
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 错误处理配置
MAX_CONSECUTIVE_ERRORS=5
ERROR_COOLDOWN_SECONDS=60
ACCOUNT_COOLDOWN_MINUTES=30

# 数据处理配置
BATCH_SIZE=100
MAX_RETRIES=3
CHUNK_SIZE=1000

# 监控配置
MONITOR_INTERVAL=60
HEALTH_CHECK_INTERVAL=300
PERFORMANCE_LOG_INTERVAL=600