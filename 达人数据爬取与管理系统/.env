# 达人数据爬取与管理系统环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置值

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=192.168.102.168
DB_PORT=3306
DB_NAME=influencer_crawler
DB_USER=lu
DB_PASSWORD=lu
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ===========================================
# API配置
# ===========================================
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RETRY_DELAY=1.0
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
COOKIE_FILE=config/cookies.txt

# ===========================================
# 任务调度配置
# ===========================================
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=3600
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=60
QUEUE_MAX_SIZE=1000
QUEUE_TIMEOUT=10
SAVE_TASK_STATE=true
TASK_STATE_FILE=data/task_state.json

# ===========================================
# 爬虫配置
# ===========================================
CHROME_DEBUG_PORT=9222
CHROME_USER_DATA_DIR=
PAGE_LOAD_TIMEOUT=30
ELEMENT_WAIT_TIMEOUT=10
CRAWL_DELAY_MIN=1.0
CRAWL_DELAY_MAX=3.0
BATCH_SIZE=50
MAX_PAGES_PER_TASK=100
MAX_CONSECUTIVE_ERRORS=5
ERROR_RECOVERY_DELAY=300

# ===========================================
# 账号管理配置
# ===========================================
MAX_ACCOUNTS_PER_TASK=3
ACCOUNT_ROTATION_INTERVAL=1800
ACCOUNT_COOLDOWN_PERIOD=300
HEALTH_CHECK_INTERVAL=600
MAX_FAILED_REQUESTS=10
ACCOUNT_RECOVERY_TIME=3600

# ===========================================
# 导出配置
# ===========================================
EXPORT_DIR=exports
EXPORT_FORMAT=xlsx
MAX_ROWS_PER_FILE=10000
FILENAME_TEMPLATE=influencers_{timestamp}_{batch}.{ext}
TIMESTAMP_FORMAT=%Y%m%d_%H%M%S

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=10
LOG_RETENTION_DAYS=30
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# ===========================================
# 系统配置
# ===========================================
DEBUG_MODE=false
ENVIRONMENT=production
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1
ENABLE_RATE_LIMITING=true
MAX_REQUEST_SIZE=10485760
DATA_DIR=data
TEMP_DIR=temp
BACKUP_DIR=backups

# ===========================================
# 安全配置（可选）
# ===========================================
# SECRET_KEY=your_secret_key_here
# ENCRYPTION_KEY=your_encryption_key_here
# JWT_SECRET=your_jwt_secret_here

# ===========================================
# 通知配置（可选）
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=admin@example.com

# ===========================================
# Redis配置（如使用缓存）
# ===========================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ===========================================
# 监控配置（可选）
# ===========================================
# ENABLE_METRICS=true
# METRICS_PORT=8080
# HEALTH_CHECK_PORT=8081